{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@components": [
        "components/index"
      ],
      "@assets": [
        "assets/index"
      ],
      "@views": [
        "views/index"
      ],
      "@types": [
        "types/index"
      ],
      "@store": [
        "store/index"
      ],
      "@middleware": [
        "middleware/index"
      ],
      "@utils": [
        "utils/index"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules"
  ]
}